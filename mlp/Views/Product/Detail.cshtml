@model mlp.Models.Product
@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Detail</title>
</head>
<body>
    <h1>Hello ponies!</h1>

    <nav>
        <a href="/Product/Index">Home</a>
    </nav>

    <h2>@Model.Name</h2>
    <h2>ID: @Model.Id</h2>
    <img src="~/img/@Model.Image" alt="@Model.Name" />
    <h3>Category: @Model.Category</h3>
    <p>Review: @Model.Review</p>
    <p>Date: @Model.DateTimeGroup</p>
    <p>Description: @Model.Description</p>
</body>
</html>
