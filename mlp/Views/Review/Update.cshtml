@model mlp.Models.Review


    <section id="aboutsection">
        <h4>Update Review</h4>
        <div id="aboutcontainer">

            <div class="grid-item grid-item-1">


                <hr />
                <div class="row">
                    <div class="col-md-4">
                        <form asp-action="Update" method="post">
                            <div asp-validation-summary="ModelOnly" class="text-danger"></div>

                            <div class="form-group">
                                <label asp-for="Content" class="control-label">Content</label>
                                <input asp-for="Content" class="form-control" />
                                <span asp-validation-for="Content" class="text-danger"></span>
                            </div>
                            <div class="form-group">
                                <label asp-for="ReviewerName" class="control-label">Reviewer Name</label>
                                <input asp-for="ReviewerName" class="form-control" />
                                <span asp-validation-for="ReviewerName" class="text-danger"></span>
                            </div>
                            <div class="form-group">
                                <label asp-for="Rating" class="control-label">Rating </label>
                                <input asp-for="Rating" class="form-control" />
                                <span asp-validation-for="Rating" class="text-danger"></span>
                            </div>
                            <div class="form-group">
                                <label type="hidden" asp-for="ProductId" class="control-label"></label>
                                <input type="hidden" asp-for="ProductId" class="form-control" />
                                <span asp-validation-for="ProductId" class="text-danger"></span>
                            </div>
                            <div class="form-group">
                                <input type="submit" value="Update" class="btn btn-primary" />
                            </div>
                        </form>
                    </div>
                </div>

                <div class="grid-item grid-item-3">
                    <a href="/Product/Index"> Equestria</a>
                </div>

            </div>
        </div>
    </section>

